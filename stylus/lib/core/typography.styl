
/**
 * Standardising the header and body tags
 * Omit Top Margins and going the margin-bottom way
 */

p
  font-family $font-paragraph
  font-size 1em
  margin-bottom 1em
  line-height 140%
  letter-spacing .025em
  &:last-child
    margin-bottom 0

span
  font-family $font-default
  line-height normal

blockquote 
  border-left .25em solid black
  padding 1em 2em
  padding-left 4em
  font-family $font-header

h1,h2,h3,h4,h5,h6
  font-family $font-header
  margin-bottom 1.75rem
  font-weight inherit
  line-height 1.35em
  text-rendering optimizeLegibility
  letter-spacing .05em

h1
  font-size 2.2rem
h2
  font-size 2rem
h3
  font-size 1.667rem
h4
  font-size 1.111rem
h5
  font-size 1.121rem
h6
  font-size .88rem
small
  font-size 0.707em
pre, code
  font-family 'monospace'
